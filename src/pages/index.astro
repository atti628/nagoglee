k---
import Layout from '../layouts/Layout.astro';
import { getNews } from "../library/microcms";

const response = await getNews({ fields: ["id", "title", "content", 
"createdAt"] });
const newsList = response.contents;
---

<Layout title="トップページ">
  <h1>お知らせ一覧</h1>
  <ul>
    {newsList.map((news) => (
      <li style="margin-bottom: 2rem;">
        <h2>{news.title}</h2>
        <p style="color: #666;">{new 
Date(news.createdAt).toLocaleDateString("ja-JP")}</p>
        <div set:html={news.content} />
      </li>
    ))}
  </ul>
</Layout>
